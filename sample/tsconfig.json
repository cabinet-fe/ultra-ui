{
  "extends": "ts-conf-base/tsconfig.vue.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "target": "ESNext",
    "jsx": "preserve",
    "types": ["vite/client", "@vue/runtime-core"],
    "baseUrl": "..",
    "rootDir": "..",
    "outDir": "./dist",
    "paths": {
      "ultra-ui/*": ["ui/*"],
      "@ui/*": ["ui/*"]
    },
    "allowJs": true
  },
  "include": ["**/*.vue", "**/*.ts"],
  "exclude": ["node_modules", "dist/**", "**/*.js"]
}
