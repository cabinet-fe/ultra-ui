{
  "extends": "ts-conf-base/tsconfig.vue.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "types": ["vite/client"],
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["./*"]
    },
    "outDir": "../dist"
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.vue"],
  "exclude": ["node_modules", "**/__test__/**/*"]
}
