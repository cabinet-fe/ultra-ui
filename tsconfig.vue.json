{
  "extends": "ts-conf-base/tsconfig.vue.json",
  "compilerOptions": {
    "declaration": true,
    "composite": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "baseUrl": "./ui",
    "paths": {
      "@ui/*": ["./*"]
    }
  },
  "include": [
    "ui/**/*.vue",
    "ui/**/*.ts",
    "ui/**/*.tsx",
    "sample/**/*.vue",
    "sample/**/*.ts",
    "sample/**/*.tsx",
    "sample/*.d.ts"
  ],
  "exclude": ["node_modules", "**/vite.config.ts"]
}
